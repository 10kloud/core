@page
@model _10kloud_CRUD.Pages.AlarmsTables.PressionAlarmTablesModel
@{
    Layout = "_LayoutPressionAlarmTables";
}



<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
     <a asp-page="/AlarmsCreate/CreateAlarmPression"><button type="button" class="btn btn-primary ml-2">Crea Allarme</button></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Silos</th>
                        <th>Soglia Di Allarme</th>
                        <th>Parametro Dell'Allarme</th>
                        <th>Gravità Allarme</th>
                        <th>Email Utente</th>
                        <th style="text-align: center;">Opzioni</th>
                    </tr>
                </thead>
                @foreach (var item in Model.Allarmi)
                {
            <tr>
                <td>@item.Silos_Id</td>
                <td>@item.Id</td>

                <td>@item.Threshold</td>
                <td>@item.Alarming_Parameter</td>
                <td>@item.Severity_Alarm</td>
                <td>@item.user_email</td>
                <td style="width: auto; text-align: center;"><button type="button" class="btn btn-primary">Modifica</button><a asp-page="/AlarmsDelete/Delete"><button type="button" class="btn btn-danger ml-5">Elimina</button></a></td>
            </tr>
                }
                

            </table>
        </div>
    </div>
</div>



