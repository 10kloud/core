@page
@model _10kloud_CRUD.Pages.AlarmsTables.TemperatureAlarmTablesModel
@{
    Layout = "_LayoutTemperatureAlarmTables";

}


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a asp-page="/AlarmsCreate/CreateAlarmTemperature"><button type="button" class="btn btn-primary ml-2">Crea Allarme</button></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nome allarme</th>
                        <th>Silos</th>
                        <th>Descrizione</th>

                        <th>Soglia Di Allarme</th>

                        <th>Gravità Allarme</th>
                        <th>Email Utente</th>

                    </tr>
                </thead>
                @foreach (var item in Model.Allarmi)
                {
                    <tr>
                        <td>@item.Name</td>

                        <td>@item.Silos_Id</td>
                        <td>@item.Description</td>



                        <td>@item.Threshold bar</td>

                        <td>@item.Severity_Alarm</td>
                        <td>@item.User_Email</td>
                        <td style="width: auto; text-align: center;">
                            <a asp-page="/editAlarm/EditAlarm">
                                <button type="button" class="btn btn-primary">Modifica</button>
                            </a>
                            <a asp-page="/AlarmsDelete/Delete"><button type="button" class="btn btn-danger ml-5">Elimina</button></a>
                        </td>
                    </tr>
                }


            </table>
        </div>
    </div>
</div>

